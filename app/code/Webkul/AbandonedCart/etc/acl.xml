<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Webkul_AbandonedCart::abandonedcart" title="Abandoned Cart" sortOrder="10" >
                    <resource id="Webkul_AbandonedCart::customerlist" title="Customer List" sortOrder="100" />
                    <resource id="Webkul_AbandonedCart::mailslist" title="Customer Mail List" sortOrder="100" />
                    <resource id="Webkul_AbandonedCart::reports" title="Mail Reports" sortOrder="100" />
                </resource>
                 <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Webkul_AbandonedCart::config_abandonedcart" title="Abandoned Cart Configurations" sortOrder="50" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>